                //        easing: 'swing',
                //        step: function (now) {
                //            $(this).text(Math.ceil(now));
                //        }
                //    });
                //});


            });            


            function GetLogisticsDisplayData()
            {
                $.ajax({
                    url: '  @Url.Action("GetLogisticsDisplayData", "Logistic")',
                    type: 'GET',
                    dataType: 'json',
                    async: false,
                    contentType: 'application/json',
                    success: function (result) {
                        

                        var html = '';


                        if (result.length == 0) {
                            $('#divProductionLineData').empty();
                            $('#divProductionLineData').text('No Production Data available');
                        } else {

                            $.each(result, function (index, itemData) {
                                html += '<tr style="color: white;text-align:center;font-size:25px;">';
                                html += '<td style="color: white;text-align:center;">' + itemData.Model + '</td>';
                                html += '<td style="color: white;text-align:center;">' + itemData.LogisticReceived + '</td>';
                                html += '<td style="color: white;text-align:center;">' + itemData.LogisticSent + '</td>';
                                html += '<td style="color: white;text-align:center;">' + itemData.WarehouseReceived + '</td>';
                                html += '<td style="color:white;text-align:center;">' + itemData.LogisticsLastSent + '</td>';
                                html += '<td style="color:white;text-align:center;">' + itemData.WarehouseLastReceived + '</td>';
                               
                                html += '</tr>';

                            });

                            $('.tbody').html(html);
                        }

                        //alert(result[0]);
                        // console.log(result[0]);
                        //$("#Lreceived").text(result[0]);
                        ////$("#Lsent").text(result[1]);
                        //$("#Wreceived").text(result[2]);
                        //$("#WreceivedTime").text(result[3]);
                        //$("#Lsent").text(result[1][0].logisticsSendCount);
                        //console.log(result);


                    },
                    error: function (result, textStatus, jqXHR) {
                        //toastr.error(result.Message);
                        // alert("Error");
                        return false;
                    }
                });
            }
            window.setInterval(function () {
                //$('#divProductionLineData').empty();
                GetLogisticsDisplayData();
            }, 20000);
            setTimeout(function () {

                location.reload();
            }, 600000);
        </script>

