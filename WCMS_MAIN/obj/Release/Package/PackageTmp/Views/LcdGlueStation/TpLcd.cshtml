    $(document).ready(function() {
        //CallOracleTest();
        $("#txtCode").focus();
        LoadAllProjects();
        LoadWorkingModelDataTplcd();
        CountTpLcdStationinput();

        $("#btnTplcdClear").click(function() {
            $('#txtCode').val('');
            $('#txtCode').focus();
            //location.reload();
        });
    });

    $('#txtCode').keydown(function() {
        debugger;
        var lastTwoDigits = this.value.slice(-2);
        if (lastTwoDigits.toLowerCase() == '-y' || lastTwoDigits.toLowerCase() == '-n') {

            var status = (this.value.slice(-1)).toLowerCase();
            if (status == "y") {

                var code = this.value.slice(0, -2);
                SaveTpLcdInfo(code, status);
            }


            if (status == "n") {


                $('#myIssueModal').modal('show'); //changed by asif 
                GetAllIssueList();
            }


        }
    });
    $("#chkOthers").click(function () {

        if ($(this).is(':checked')) {

            $('#txtOthers').show();
            $('#txtOthers').focus();
        }

        else
            $('#txtOthers').hide();
        $('#txtOthers').val('');

    });

    function GetAllIssueList() {

        $.ajax({
            url: '  @Url.Action("GetAllIssueList", "LcdGlueStation")',
            type: 'GET',
            dataType: 'json',
            async: false,
            contentType: 'application/json',
            success: function (data) {
                if (data.length == 0) {
                    $('#modIssues').empty();
                    $('#modIssues').append('<div class="statistic d-flex align-items-center bg-white has-shadow" ><div class="icon bg-green"><i class="fa fa-calendar-o"></i></div><div class="text"><small>No ongoing task available</small></div></div>');

                    return false;
                } else {

                    $('#modIssues').empty();
                    $.each(data, function (index, itemData) {


                        $("#modIssues").append('<div class="col-md-4"><form><div class="form-check"><label><input type="checkbox"  name="Errorcheck" value="' + itemData.IssueName + '"> <span class="label-text">' + itemData.IssueName + '</span></label></div></form> </div>');
                    });

                }

            },
            error: function (result, textStatus, jqXHR) {
                //toastr.error(result.Message);
                // alert("Error");
                return false;
            }
        });


    }

    function SaveTpLcdInfo(code, status) {

        debugger;

        if ($("#txtCode").val() == "") {


            iziToast.warning({
                timeout: 1000,
                imageWidth: 150,
                position: 'center',
                title: 'Warning',
                message: ' Code Required'
            });
            return false;
        } else {
            var tpLcdData = {
                Code: code,
                Passed: status,
            };            


            $.ajax({
                url: '@Url.Action("InsertTpLcdStation", "LcdGlueStation")', //changed For Test
                type: 'Post',
                data: JSON.stringify({ tpLcdData: tpLcdData }),
                dataType: 'json',
                async: false,
                contentType: 'application/json',
                success: function(result) {

                    if (result.IsSuccess) {


                       
                        $("#txtCode").val('');
                        $("#txtCode").focus();
                        location.reload();
                        return true;
                        //location.reload();
                    } else if (result.Id == "0") {
                        window.location = '@Url.Action("LogOut", "Account")';

                    }


                    else {
                        iziToast.warning({
                            timeout: 1000,
                            imageWidth: 100,
                            position: 'center',
                            title: 'Warning!- ',
                            message: result.Message,
                            backgroundColor: '#E70F0F',
                            theme: 'dark', // dark
                            zindex: 999,
                            progressBarColor: '#091B2B',
                            titleSize: 15,
                            messageColor: '#FDFEFE',
                            messageSize: 15,

                        });
                        $("#txtCode").val('');
                        $("#txtCode").focus();
                        return false;
                    }

                },
                error: function (result, textStatus, jqXHR) {
                    iziToast.error({
                        timeout: 2000,
                        imageWidth: 150,
                        position: 'center',
                        title: 'Error',
                        message: result
                    });
                    $("#txtCode").val('');
                    $("#txtCode").focus();
                    return false;
                }
            });
        }
       
    }


    function CountTpLcdStationinput() {

        $.ajax({
            url: '  @Url.Action("CountTpLcdStationinput", "LcdGlueStation")',
            type: 'GET',
            dataType: 'json',
            async: false,
            contentType: 'application/json',
            success: function (result) {

                if (result.length == 0) {
                    $('#checked').text('0');
                    $('#passed').text('0');
                    $('#failed').text('0');
                }
                else {
                    $('#checked').text(result[0].totalChecked);
                    $('#passed').text(result[0].passedCount);
                    $('#failed').text(result[0].failedCount);
                }

            },
            error: function (result, textStatus, jqXHR) {
                //toastr.error(result.Message);
                // alert("Error");
                return false;
            }
        });


    }















    function LoadAllProjects() {

        var url = "@Url.Action("GetProjec", "Project")";
        $.getJSON(url, function (json) {
            var elem = $("#txtProject");
            $("#txtProject").chosen("destroy");
            elem.empty();

            elem.append("<option value='0'>---Select---</option>");

            $.each(json, function (idx, obj) {

                elem.append('<option value="' + obj.Id + '">' + obj.value + '</option>');
            });

            elem.chosen({ width: "100%", height: "10px" });

            //$(".chosen-select").chosen({ height: "10%" });


        });
    }


    //Add Data Function
    function Add() {


        if ($('#txtProject').val() == "" || $("#txtProject").val() == 0) {
            iziToast.warning({
                timeout: 2000,
                imageWidth: 50,
                position: 'center',
                message: ' Please  Insert  Project  Name',
                title: 'warning! -',
                backgroundColor: '#E22919',
                theme: 'dark', // dark
                zindex: 999,
                progressBarColor: '#091B2B',
                titleSize: 30,
                messageColor: '#F4F3F8',
                messageSize: 30,

            });

            return false;
        }


        else {

            var obj = {

                ProjectId: $('#txtProject').val(),
                ProjectName: $('#txtProject option:selected').text(),
                Station:"TPLCD",
                Remarks: $('#txtRemarks').val(),
            };

            $.ajax({
                url: "@Url.Action("AddWorkingProject", "LcdGlueStation")",
                data: JSON.stringify(obj),
                type: "POST",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    

                    if (result.IsSuccess) {
                        iziToast.success({
                            timeout: 2000,
                            imageWidth: 150,
                            position: 'center',
                            title: 'Success',
                            message: 'Updated Saved Successfully'
                        });

                        $('#myModal').modal('hide');

                        LoadWorkingModelDataTplcd();
                        return true;

                    }
                    else {
                        iziToast.error({
                            timeout: 3000,
                            imageWidth: 150,
                            position: 'center',
                            title: 'Error',
                            message: 'Error Occured While Saving'
                        });
                    }
                    $('#myModal').modal('hide');
                },
                error: function (errormessage) {
                    alert(errormessage.responseText);
                }
            });



        }
    }

    //Load Data function
    function LoadWorkingModelDataTplcd() {
        $.ajax({
            url: "  @Url.Action("LoadWorkingModelDataTplcd", "LcdGlueStation")",
            type: "GET",
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (result) {
                var html = '';
                $.each(result, function (key, item) {
                    html += '<tr>';
                    html += '<td style=display:none>' + item.Id + '</td>';
                    html += '<td>' + item.ProjectName + '</td>';
                    html += '<td>' + item.CurentlyRunning + '</td>';
                    html += '<td><a href="#" onclick="return UpdateProject(' + item.Id + ')">Make Current Working Project</a></td>';
                    html += '</tr>';
                });
                $('.tbody').html(html);
            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }
        });
    }


    function UpdateProject(id) {
        debugger;
        $.ajax({


            url: " @Url.Action("UpdateProject", "LcdGlueStation")?projectId=" + id,
            typr: "GET",
            contentType: "application/json;charset=UTF-8",
            dataType: "json",
            success: function (result) {

                //console.log(result);
                
                if (result.IsSuccess) {
                    iziToast.success({
                        timeout: 2000,
                        imageWidth: 150,
                        position: 'center',
                        title: 'Success',
                        message: 'Updated Saved Successfully'
                    });

                    $("#txtCode").focus();
                    LoadWorkingModelDataTplcd();
                    return true;

                } else {
                    iziToast.error({
                        timeout: 3000,
                        imageWidth: 150,
                        position: 'center',
                        title: 'Error',
                        message: 'Error Occured While Saving'
                    });
                    $("#txtCode").focus();
                }

               

            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }
        });
        return false;
    }



    $("#btnSave").click(function () {
        debugger;
        //$('#myModal').modal('hide');
       // var aestheticQcList = [];
        var reworkList = [];

        var code = $("#txtCode").val();


        var mobleCode = code.slice(0, -2);

        var status = code.slice(-1);       
        if (status == 'N') {
            var checkedNum = $('input[name="Errorcheck"]:checked').length;


            if (!checkedNum && $('#txtOthers').val() == "") {
                iziToast.warning({
                    timeout: 1000,
                    imageWidth: 150,
                    position: 'center',
                    title: 'Warning',
                    message: 'Please Select Issues'
                });
                return false;
            }

        }

        if ($("#txtCode").val() == "") {


            iziToast.warning({
                timeout: 1000,
                imageWidth: 150,
                position: 'center',
                title: 'Warning',
                message: ' Code Required'
            });
            return false;
        }


        else {

            var tpLcdData = {
                Code: mobleCode,
                Passed: status,
            };
            var issues = '';

            $('input[name="Errorcheck"]:checked').each(function () {
                //console.log(this.value);
                issues += this.value + ',';

            });

            if ($('#txtOthers').val() != "") {

                issues += $('#txtOthers').val();
            }

            reworkList.push({
                Code: mobleCode,
                FailedFrom: "TPLCD",
                Issue: issues //$("#txtIssues").val()
            });

           


            $.ajax({
                url: ' @Url.Action("InsertTpLcdStation", "LcdGlueStation")', //changed For Test
                type: 'Post',
                data: JSON.stringify({ tpLcdData: tpLcdData, reworkList: reworkList }),
                dataType: 'json',
                async: false,
                contentType: 'application/json',
                success: function (result) {

                    if (result.IsSuccess) {
                       
                        $("#btnSave").hide();
                        $("#txtCode").focus();
                        location.reload();
                       

                        return true;
                      
                    } else {
                        iziToast.error({
                            timeout: 1000,
                            imageWidth: 100,
                            position: 'center',
                            title: 'Error',
                            message: result.Message,
                            backgroundColor: '#E70F0F',
                            theme: 'dark', // dark
                            zindex: 999,
                            progressBarColor: '#091B2B',
                            titleSize: 15,
                            messageColor: '#FDFEFE',
                            messageSize: 15,
                        });
                        $("#txtMobileCode").val('');
                        return false;
                    }

                },
                error: function (result, textStatus, jqXHR) {
                    iziToast.error({
                        timeout: 2000,
                        imageWidth: 150,
                        position: 'center',
                        title: 'Error',
                        message: result
                    });

                    //return false;
                }
            });



        }

    });








</script>